{
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.rulers": [34, 65, 80],
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": true,
  "files.eol": "\n",
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true
  },
  "files.trimTrailingWhitespace": true,
  "hexdump.btnEnabled": true,
  "hexdump.charEncoding": "utf-8",
  "hexdump.littleEndian": false,
  "hexdump.nibbles": 2,
  "hexdump.showAddress": true,
  "hexdump.showAscii": true,
  "hexdump.showInspector": true,
  "hexdump.showOffset": true,
  "hexdump.sizeWarning": 1048576,
  "hexdump.uppercase": false,
  "hexdump.width": 16,
  "rewrap.doubleSentenceSpacing": false,
  "rewrap.reformat": true,
  "rewrap.wholeComment": true,
  "rewrap.wrappingColumn": 80,
  "sortJSON.orderOverride": ["name", "version", "description"],
  "sortJSON.orderUnderride": ["dependencies", "devDependencies"]
}
