~6a ~30     ; push '0'
~b8 ~0c ~00 ; mov ax, os_print_char
~ff ~d0     ; call ax
~58         ; pop ax
~6a ~78     ; push 'x'
~b8 ~0c ~00 ; mov ax, os_print_char
~ff ~d0     ; call ax
~58         ; pop ax
