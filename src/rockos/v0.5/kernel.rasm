~04 ~30     ; add al, '0'         ; map the number to the ASCII characters
~50         ; push ax
~b8 ~0c ~00 ; mov ax, os_print_char
~ff ~d0     ; call ax
~58         ; pop ax

~61         ; popa
~89 ~ec     ; mov sp, bp
